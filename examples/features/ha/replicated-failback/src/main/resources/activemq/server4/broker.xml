--><configuration xmlns="urn:activemq" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:activemq /schema/artemis-server.xsd">

   

   <core xmlns="urn:activemq:core">

      <name>server4</name>

      <journal-type>ASYNCIO</journal-type>

      <bindings-directory>./data/bindings</bindings-directory>

      <journal-directory>./data/journal</journal-directory>

      <large-messages-directory>./data/largemessages</large-messages-directory>

      <paging-directory>./data/paging</paging-directory>

      <cluster-user>amqprod1cluster</cluster-user>

      <cluster-password>REDACTED_CLUSTER_PASSWORD</cluster-password>
	  
      <ha-policy>
         <replication>
            <master>
               <!--  we need this for auto failback  -->
               <check-for-live-server>true</check-for-live-server>
               <group-name>prod-pair-3</group-name>
               <vote-on-replication-failure>true</vote-on-replication-failure>
            </master>
         </replication>
      </ha-policy>

      <!-- Connectors -->

       <connectors>
           <connector name="netty-ssl-connector-1a">tcp://localhost:61616?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
           <connector name="netty-ssl-connector-1b">tcp://localhost:61617?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
           <connector name="netty-ssl-connector-2a">tcp://localhost:61618?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
           <connector name="netty-ssl-connector-2b">tcp://localhost:61619?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
           <connector name="netty-ssl-connector-3a">tcp://localhost:61620?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexamplee</connector>
           <connector name="netty-ssl-connector-3b">tcp://localhost:61621?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
           <connector name="netty-ssl-connector-4a">tcp://localhost:61622?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
           <connector name="netty-ssl-connector-4b">tcp://localhost:61623?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
           <connector name="netty-ssl-connector-1w">tcp://localhost:61624?sslEnabled=true;trustStorePath=activemq.example.truststore;trustStorePassword=activemqexample</connector>
       </connectors>

       <!-- Acceptors -->
       <acceptors>
           <acceptor name="netty-ssl-acceptor">tcp://localhost:61620?sslEnabled=true;keyStorePath=activemq.example.keystore;keyStorePassword=activemqexample;tcpSendBufferSize=1048576;tcpReceiveBufferSize=1048576;protocols=CORE,AMQP,STOMP,HORNETQ,MQTT,OPENWIRE;useEpoll=true;amqpCredits=1000;amqpLowCredits=300</acceptor>
           <acceptor name="netty-acceptor">tcp://localhost:62620?tcpSendBufferSize=1048576;tcpReceiveBufferSize=1048576;protocols=CORE,AMQP,STOMP,HORNETQ,MQTT,OPENWIRE;useEpoll=true;amqpCredits=1000;amqpLowCredits=300</acceptor>
       </acceptors>

      <!-- Clustering configuration -->

      <!-- Broadcast and discovery removed for static cluster testing
      <broadcast-groups>
         <broadcast-group name="my-broadcast-group">
            <broadcast-period>5000</broadcast-period>
            <jgroups-file>mping.xml</jgroups-file>
            <jgroups-channel>active_broadcast_channel</jgroups-channel>
            <connector-ref>netty-ssl-connector</connector-ref>
         </broadcast-group>
      </broadcast-groups>

      <discovery-groups>
         <discovery-group name="my-discovery-group">
            <jgroups-file>mping.xml</jgroups-file>
            <jgroups-channel>active_broadcast_channel</jgroups-channel>
            <refresh-timeout>10000</refresh-timeout>
         </discovery-group>
      </discovery-groups>
      Broadcast and discovery removed for static cluster testing -->

      <!-- Old jGroups cluster connections
      <cluster-connections>
         <cluster-connection name="prod1-cluster">
            <connector-ref>netty-ssl-connector</connector-ref>
            <retry-interval>500</retry-interval>
            <use-duplicate-detection>true</use-duplicate-detection>
            <message-load-balancing>ON_DEMAND</message-load-balancing>
            <max-hops>1</max-hops>
            <discovery-group-ref discovery-group-name="my-discovery-group"/>
         </cluster-connection>
      </cluster-connections>
      Old jGroups cluster connections -->

      <!-- Static cluster test connections -->

      <cluster-connections>
         <cluster-connection name="prod1-cluster">
            <connector-ref>netty-ssl-connector-3a</connector-ref>
            <static-connectors>
               <connector-ref>netty-ssl-connector-1a</connector-ref>
               <connector-ref>netty-ssl-connector-1b</connector-ref>
               <connector-ref>netty-ssl-connector-2a</connector-ref>
               <connector-ref>netty-ssl-connector-2b</connector-ref>
<!--               <connector-ref>netty-ssl-connector-3a</connector-ref> -->
               <connector-ref>netty-ssl-connector-3b</connector-ref>
               <connector-ref>netty-ssl-connector-4a</connector-ref>
               <connector-ref>netty-ssl-connector-4b</connector-ref>
               <connector-ref>netty-ssl-connector-1w</connector-ref>
            </static-connectors>
         </cluster-connection>
      </cluster-connections>

      <!-- Other config -->

      <!-- once the disk hits this limit the system will block, or close the connection in certain protocols
                           that won't support flow control. -->
      <max-disk-usage>70</max-disk-usage>


      <!-- the system will enter into page mode once you hit this limit.
                                 This is an estimate in bytes of how much the messages are using in memory -->
      <global-max-size>419430400</global-max-size>

      <message-expiry-scan-period>50000</message-expiry-scan-period>
      <message-expiry-thread-priority>8</message-expiry-thread-priority>
      <thread-pool-max-size>1000</thread-pool-max-size>
      <security-invalidation-interval>310000</security-invalidation-interval>
      <journal-pool-files>100</journal-pool-files>


       <!-- should the broker detect dead locks and other issues -->
      <critical-analyzer>true</critical-analyzer>
      <critical-analyzer-timeout>120000</critical-analyzer-timeout>
      <critical-analyzer-check-period>60000</critical-analyzer-check-period>
      <critical-analyzer-policy>HALT</critical-analyzer-policy>


      <security-settings>
	 <security-setting match="#">
            <permission type="createNonDurableQueue" roles="app-amq-prod-system-admins"/>
            <permission type="deleteNonDurableQueue" roles="app-amq-prod-system-admins"/>
            <permission type="createDurableQueue" roles="app-amq-prod-system-admins"/>
            <permission type="deleteDurableQueue" roles="app-amq-prod-system-admins"/>
            <permission type="createAddress" roles="app-amq-prod-system-admins"/>
            <permission type="deleteAddress" roles="app-amq-prod-system-admins"/>
            <permission type="consume" roles="app-amq-prod-system-admins,app-amq-prod-system-operators"/>
            <permission type="browse" roles="app-amq-prod-system-admins,app-amq-prod-system-operators"/>
            <permission type="send" roles="app-amq-prod-system-admins,app-amq-prod-system-operators"/>
            <permission type="manage" roles="app-amq-prod-system-admins,app-amq-prod-system-operators"/>
         </security-setting>

	 <security-setting match="ServerFilter">
            <permission type="createDurableQueue" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="consume" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="browse" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="send" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="manage" roles="app-amq-prod-system-admins"/>
         </security-setting>

	 <security-setting match="exampleQueue">
            <permission type="createDurableQueue" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="consume" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="browse" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="send" roles="app-amq-prod-system-admins,app-amq-prod-serverfilter"/>
            <permission type="manage" roles="app-amq-prod-system-admins"/>
         </security-setting>

         <!--security for example queue-->
      </security-settings>

      <address-settings>
         <address-setting match="#">
           <max-size-bytes>104857600</max-size-bytes>
           <page-size-bytes>10485760</page-size-bytes>
           <address-full-policy>PAGE</address-full-policy>
           <expiry-address>expiryQueue</expiry-address>
           <redelivery-delay>5000</redelivery-delay>
           <redelivery-delay-multiplier>2</redelivery-delay-multiplier>
           <max-redelivery-delay>50000</max-redelivery-delay>
           <dead-letter-address>deadLetterQueue</dead-letter-address>
           <max-delivery-attempts>5</max-delivery-attempts>
	   <redistribution-delay>300000</redistribution-delay>
         </address-setting>
      </address-settings>

      <addresses>
         <address name="exampleQueue">
            <anycast>
               <queue name="exampleQueue"/>
            </anycast>
         </address>

	 <address name="ServerFilter">
            <anycast>
               <queue name="Queue1">
		   <filter string="color='red'"/>
	       </queue>
               <queue name="Queue2">
                   <filter string="color='yellow'"/>
               </queue>
               <queue name="Queue3">
                   <filter string="color='Green'"/>
               </queue>
            </anycast>
         </address>
         <address name="expiryQueue">
           <anycast>
             <queue name="expiryQueue"/>
           </anycast>
         </address>
         <address name="deadLetterQueue">
           <anycast>
             <queue name="deadLetterQueue"/>
           </anycast>
         </address>

      </addresses>
   </core>
</configuration>

